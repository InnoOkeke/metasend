{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/api/index"
    },
    {
      "src": "/.well-known/apple-app-site-association",
      "dest": "/public/.well-known/apple-app-site-association"
    },
    {
      "src": "/.well-known/assetlinks.json",
      "dest": "/public/.well-known/assetlinks.json"
    },
    {
      "src": "/claim/(.*)",
      "dest": "/api/web?transferId=$1&type=claim"
    },
    {
      "src": "/pay/(.*)",
      "dest": "/api/web?requestId=$1&type=pay"
    },
    {
      "src": "/gift/(.*)",
      "dest": "/api/web?giftId=$1&type=gift"
    },
    {
      "src": "/gifts/(.*)",
      "dest": "/api/web?giftId=$1&type=gift"
    },
    {
      "src": "/tip/(.*)",
      "dest": "/api/web?jarId=$1&type=tip"
    },
    {
      "src": "/tipjar/(.*)",
      "dest": "/api/web?jarId=$1&type=tip"
    }
  ]
}