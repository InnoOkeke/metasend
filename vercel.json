{
  "buildCommand": "echo 'No build needed - API only'",
  "outputDirectory": "api",
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/index"
    },
    {
      "source": "/.well-known/apple-app-site-association",
      "destination": "/public/.well-known/apple-app-site-association"
    },
    {
      "source": "/.well-known/assetlinks.json",
      "destination": "/public/.well-known/assetlinks.json"
    },
    {
      "source": "/claim/:transferId",
      "destination": "/api/web/claim/:transferId"
    },
    {
      "source": "/pay/:requestId",
      "destination": "/api/web/pay/:requestId"
    },
    {
      "source": "/gift/:giftId",
      "destination": "/api/web/gift/:giftId"
    },
    {
      "source": "/gifts/:giftId",
      "destination": "/api/web/gift/:giftId"
    },
    {
      "source": "/tip/:jarId",
      "destination": "/api/web/tip/:jarId"
    },
    {
      "source": "/tipjar/:jarId",
      "destination": "/api/web/tip/:jarId"
    }
  ],
  "headers": [
    {
      "source": "/.well-known/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/process-expiry",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/send-reminders",
      "schedule": "0 12 * * *"
    }
  ]
}
